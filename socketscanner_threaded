import socket
import threading
import Queue

print_lock = threading.Lock()

target = 'onenodecode.com'

def portscan(port):
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    try:
        con = s.connect((target,port))
        with print_lock:
            print('Port',port,'is open!')
        con.close()
    except:
        pass

#worker is how many queues to run
def threader():
    while True:
        worker = q.get()
        portscan(worker)
        q.task_done()

#I must be using a 2.7 or newer version of python due to behavior of Queue
q = Queue.Queue()
#putting thread together
for x in range(30):
    t = threading.Thread(target=threader)
    t.daemon = True
    t.start()

#specifying jobs (basically workers)
#port 0 is invalid and 101 ends at 100, range is ports to check
for worker in range(1,101):
    q.put(worker)

q.join()
